        app:right_bottom_text="@string/home_item_oneyuan_house"
        app:left_background="@color/home_item_blue"
        app:middle_top_background="@color/home_item_blue"
        app:middle_bottom_background="@color/home_item_blue"
        app:right_top_background="@color/home_item_blue"
