        android:layout_marginTop="@dimen/dp5"
        android:id="@+id/home_item_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textColor="@color/white"
        app:left_text="@string/home_item_new_house"
        app:middle_top_text="@string/home_item_be_landlord"
        app:middle_bottom_text="@string/home_item_favorite"
        app:right_top_text="@string/home_item_order"
        app:right_bottom_text="@string/home_item_oneyuan_house"
        app:left_background="@color/home_item_yellow"
        app:middle_top_background="@color/home_item_yellow"
        app:middle_bottom_background="@color/home_item_yellow"
        app:right_top_background="@color/home_item_yellow"
