        app:left_text="@string/home_item_short_rent"
        app:middle_top_text="@string/home_item_be_landlord"
        app:middle_bottom_text="@string/home_item_favorite"
        app:right_top_text="@string/home_item_order"
        app:right_bottom_text="@string/home_item_oneyuan_house"
        app:left_background="@color/home_item_red"
        app:middle_top_background="@color/home_item_red"
        app:middle_bottom_background="@color/home_item_red"
        app:right_top_background="@color/home_item_red"
        app:right_bottom_background="@color/home_item_red" />

    <com.example.arron.demo.view.component.MainPageItemView
        android:layout_marginTop="@dimen/dp5"
        android:id="@+id/home_item_2"
